{
  "manifest_version": 3,
  "name": "Nomee - Connect with Website Owners",
  "version": "1.0",
  "description": "Connect with website owners through their domain names",
  "permissions": ["activeTab", "storage", "notifications", "scripting"],
  "host_permissions": ["https://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Nomee"
  },
  "options_page": "settings.html",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
